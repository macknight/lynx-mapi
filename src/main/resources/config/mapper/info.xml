<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lynx.info.service.dao.InfoDao">
    <resultMap id="rssResult" type="com.lynx.info.entity.RSS">
        <result property="url" column="URL"/>
        <result property="category" column="Category"/>
        <result property="title" column="Title"/>
    </resultMap>

    <resultMap id="rssInfoResult" type="com.lynx.info.entity.RSSInfo">
        <result property="id" column="Id"/>
        <result property="title" column="title"/>
        <result property="summary" column="Summary"/>
        <result property="link" column="Link"/>
        <result property="pubDate" column="pubDate"/>
    </resultMap>

    <select id="getSinaRSSes" resultMap="rssResult">
        SELECT * FROM LM_RSS
    </select>

    <select id="getSinaRSS" resultType="string">
        SELECT URL FROM LM_RSS WHERE Id=#{id}
    </select>

    <select id="getSinaRSSInfo" resultMap="rssInfoResult">
        SELECT * FROM LM_RSSInfo WHERE RSSId = #rssId#
        <![CDATA[
        AND Id > (#{page} - 1) * 10 AND Id <= #{num} * 10
        ]]>
    </select>

    <delete id="deleteRSSInfoByRSSId">
        DELETE FROM LM_RSSInfo WHERE RSSId = #{rssId}
    </delete>

    <insert id="insertRSSInfos">
        INSERT INTO LM_RSSInfo(Id, Link, Title, Summary, RSSId, PubDate)
        VALUES
        <foreach collection="rssInfos" item="info" index="index" separator=",">
            (#{info.id}, #{info.link}, #{info.title},
            #{info.summary}, #{info.rssId}, #{info.pubDate})
        </foreach>
    </insert>

</mapper>